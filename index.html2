        // Unit Converter Component
        function UnitConverter() {
            const [value, setValue] = useState('');
            const [fromUnit, setFromUnit] = useState('byte');
            const [toUnit, setToUnit] = useState('kb');
            const [result, setResult] = useState('');

            const convert = () => {
                const conversions = {
                    byte: 1,
                    kb: 1024,
                    mb: 1024 * 1024,
                    gb: 1024 * 1024 * 1024,
                    tb: 1024 * 1024 * 1024 * 1024
                };

                const valueInBytes = parseFloat(value) * conversions[fromUnit];
                const resultValue = valueInBytes / conversions[toUnit];
                setResult(resultValue.toLocaleString('tr-TR', { maximumFractionDigits: 2 }));
            };

            useEffect(() => {
                if (value) convert();
            }, [value, fromUnit, toUnit]);

            return (
                <div className="bg-white rounded-xl shadow-lg p-6">
