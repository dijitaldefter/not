        // Blockly Code Editor (BT.5.5)
        function BlocklyEditor() {
            const blocklyDiv = useRef(null);
            const [workspace, setWorkspace] = useState(null);
            const [output, setOutput] = useState('');
            const [character, setCharacter] = useState({ x: 100, y: 100, rotation: 0 });

            useEffect(() => {
                if (blocklyDiv.current && !workspace && typeof Blockly !== 'undefined') {
                    const ws = Blockly.inject(blocklyDiv.current, {
                        toolbox: `
                            <xml>
                                <block type="controls_repeat_ext">
                                    <value name="TIMES">
                                        <shadow type="math_number">
                                            <field name="NUM">4</field>
                                        </shadow>
                                    </value>
                                </block>
                                <block type="text_print"></block>
                                <block type="math_arithmetic"></block>
                                <block type="math_number"></block>
                                <block type="text"></block>
                            </xml>
                        `,
                        grid: { spacing: 20, length: 3, colour: '#ccc' },
                        trashcan: true,
                        zoom: { controls: true, wheel: false, startScale: 0.9 }
                    });
                    setWorkspace(ws);
                }
            }, []);

            const runCode = () => {
                if (!workspace) return;

                try {
                    Blockly.JavaScript.INFINITE_LOOP_TRAP = null;
                    const code = Blockly.JavaScript.workspaceToCode(workspace);

                    // Safely evaluate the code
                    let consoleOutput = [];
                    const customPrint = (text) => {
                        consoleOutput.push(text);
                    };

                    // Replace window.alert and console.log
                    const customCode = code.replace(/window\.alert/g, 'customPrint').replace(/console\.log/g, 'customPrint');

                    eval(customCode);

                    setOutput(consoleOutput.join('\n') || 'Kod √ßalƒ±≈ütƒ±rƒ±ldƒ±! ‚úÖ');
                } catch (e) {
                    setOutput('Hata: ' + e.message);
                }
            };

            return (
                <div className="bg-white rounded-xl shadow-lg p-6">
                    <h3 className="text-2xl font-bold mb-4 text-gray-800">üßÆ Blok Tabanlƒ± Programlama</h3>

                    <div className="grid grid-cols-1 lg:grid-cols-2 gap-4">
                        <div>
                            <h4 className="font-bold mb-2">Kod Bloklarƒ±nƒ± S√ºr√ºkleyin</h4>
