        // Password Strength Tester (BT.5.2)
        function PasswordTester() {
            const [password, setPassword] = useState('');
            const [strength, setStrength] = useState({ score: 0, text: '', color: '', feedback: [] });

            const checkPasswordStrength = (pwd) => {
                let score = 0;
                const feedback = [];

                if (pwd.length === 0) {
                    return { score: 0, text: '≈ûifre girin', color: 'gray', feedback: [] };\n                }

                // Length check
                if (pwd.length >= 8) {
                    score += 25;
                    feedback.push('‚úì En az 8 karakter');
                } else {
                    feedback.push('‚úó En az 8 karakter olmalƒ±');
                }

                // Uppercase check
                if (/[A-Z]/.test(pwd)) {
                    score += 25;
                    feedback.push('‚úì B√ºy√ºk harf i√ßeriyor');
                } else {
                    feedback.push('‚úó B√ºy√ºk harf ekleyin');
                }

                // Lowercase check
                if (/[a-z]/.test(pwd)) {
                    score += 25;
                    feedback.push('‚úì K√º√ß√ºk harf i√ßeriyor');
                } else {
                    feedback.push('‚úó K√º√ß√ºk harf ekleyin');
                }

                // Number or special char check
                if (/[0-9!@#$%^&*]/.test(pwd)) {
                    score += 25;
                    feedback.push('‚úì Rakam veya √∂zel karakter i√ßeriyor');
                } else {
                    feedback.push('‚úó Rakam veya √∂zel karakter (!@#$) ekleyin');
                }

                let text, color;
                if (score < 50) {
                    text = 'Zayƒ±f';
                    color = 'red';
                } else if (score < 75) {
                    text = 'Orta';
                    color = 'orange';
                } else if (score < 100) {
                    text = 'ƒ∞yi';
                    color = 'yellow';
                } else {
                    text = 'G√º√ßl√º';
                    color = 'green';
                }

                return { score, text, color, feedback };
            };

            useEffect(() => {
                setStrength(checkPasswordStrength(password));
            }, [password]);

            return (
                <div className="bg-white rounded-xl shadow-lg p-6">
                    <h3 className="text-2xl font-bold mb-4 text-gray-800">üîê ≈ûifre G√ºvenliƒüi Testi</h3>
